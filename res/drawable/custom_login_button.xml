<selector
xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" 
	    android:drawable="@drawable/btn_default_pressed_holo_light">
	</item>
	
	<item android:state_focused="true" >
	    <shape android:shape="rectangle">
	        <solid
	            android:color="#3AA5DE" />
	        <stroke
	            android:width="10dp"
	            android:color="#AA3AA5DE" />
	    </shape>
	</item>
	
	<item>        
	    <shape>
	        <gradient
	            android:endColor="#499FCF"
	            android:centerColor="#499FCF"
	            android:startColor="#499FCF"
	            android:angle="270" />
	    </shape>
	</item>

</selector>