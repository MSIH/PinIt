<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/comments_comment_creator_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_image" />

    <TextView
        android:id="@+id/comments_comment_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/comments_comment_creator_photo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comments_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comments_comment_creator"
        android:layout_below="@id/comments_comment_creator" />

    <TextView
        android:id="@+id/comments_comment_created_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/comments_comment_creator"
        android:layout_below="@id/comments_comment_text"
        android:textColor="#D8D8D8"
        android:textSize="12sp" />

</RelativeLayout>